<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="75"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.ColumnSpan="3" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" IsReadOnly="True" Name="ekran"></TextBox>
        <TextBox x:Name="txt1" Grid.Row="1" Grid.Column="1" Margin="10" PreviewKeyDown="txt1_PreviewKeyDown"></TextBox>
        <Button Grid.Row="2" Grid.Column="2" Margin="10" Click="Gonder_Button">Gonder</Button>
        <Button Grid.Row="2" Margin="10" Click="Sil_Button">Sil</Button>
    </Grid>
</Window>
